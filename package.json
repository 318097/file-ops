{
	"name": "file-tag",
	"displayName": "file-tag",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:file-tag.createTag",
		"onCommand:file-tag.listTags",
		"onCommand:file-tag.currentTag",
		"onCommand:file-tag.renameTag",
		"onCommand:file-tag.deleteTags",
		"onCommand:file-tag.openTag",
		"onView:taggedFiles"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "taggedFiles",
				"contents": "No Tagged Files"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "taggedFiles.refreshEntry",
					"when": "view == taggedFiles",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "file-tag.deleteTags",
					"when": "view == taggedFiles && viewItem == ROOT",
					"group": "inline"
				},
				{
					"command": "file-tag.renameTag",
					"when": "view == taggedFiles && viewItem == ROOT",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "file-tag.createTag",
				"title": "File Tag: Create Tag"
			},
			{
				"command": "file-tag.listTags",
				"title": "File Tag: List Tags"
			},
			{
				"command": "file-tag.currentTag",
				"title": "File Tag: Current File tag"
			},
			{
				"command": "file-tag.renameTag",
				"title": "File Tag: Rename tag"
			},
			{
				"command": "file-tag.deleteTags",
				"title": "File Tag: Delete tags"
			},
			{
				"command": "taggedFiles.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/dark/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "file-tag.renameTag",
				"title": "Edit",
				"icon": {
					"light": "resources/dark/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "file-tag.deleteTags",
				"title": "Delete",
				"icon": {
					"light": "resources/dark/delete.svg",
					"dark": "resources/dark/delete.svg"
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "taggedFiles",
					"name": "Tagged Files"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}