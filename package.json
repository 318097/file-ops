{
	"name": "file-ops",
	"displayName": "File Ops",
	"description": "VS Code extension to import file path, tag/alias files & quick switch",
	"version": "2.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"publisher": "mehullakhanpal",
	"repository": {
		"type": "git",
		"url": "https://github.com/318097/file-ops.git"
	},
	"categories": [
		"Other"
	],
	"author": "Mehul Lakhanpal <mehullakhanpal@gmail.com> (https://www.codedrops.tech)",
	"icon": "icons/icon.png",
	"keywords": [
		"productivity",
		"vs-code",
		"switch-files",
		"file-operations",
		"bookmark",
		"alias",
		"file-shortcuts",
		"import-file",
		"relative-path"
	],
	"activationEvents": [
		"onCommand:file-tag.createTag",
		"onCommand:file-tag.listTags",
		"onCommand:file-tag.currentTag",
		"onCommand:file-tag.renameTag",
		"onCommand:file-tag.deleteTags",
		"onCommand:file-tag.openTag",
		"onView:file-tag-tree",
		"onCommand:file-switch.relatedFiles",
		"onCommand:file-switch.quickSwitch",
		"onCommand:file-import.pasteFilePath",
		"onCommand:file-import.copyFilePath"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "file-tag-tree",
				"contents": "No Tagged Files.\nStart tagging files by going to 'Command Palette' and running the command 'File Tag: Create Tag'"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "file-tag-tree.refreshData",
					"when": "view == file-tag-tree",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "file-tag-tree.renameTag",
					"when": "view == file-tag-tree && viewItem == ROOT",
					"group": "inline@1"
				},
				{
					"command": "file-tag-tree.deleteTags",
					"when": "view == file-tag-tree && viewItem == ROOT",
					"group": "inline@2"
				}
			],
			"editor/context": [
				{
					"command": "file-import.copyFilePath",
					"group": "9_cutcopypaste"
				},
				{
					"command": "file-import.pasteFilePath",
					"group": "9_cutcopypaste"
				}
			]
		},
		"commands": [
			{
				"command": "file-tag.createTag",
				"title": "File Tag: Create Tag"
			},
			{
				"command": "file-tag.listTags",
				"title": "File Tag: List Tags"
			},
			{
				"command": "file-tag.currentTag",
				"title": "File Tag: Show current File Tag"
			},
			{
				"command": "file-tag.renameTag",
				"title": "File Tag: Rename Tag"
			},
			{
				"command": "file-tag.deleteTags",
				"title": "File Tag: Delete Tags"
			},
			{
				"command": "file-tag-tree.refreshData",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "file-tag-tree.renameTag",
				"title": "Edit",
				"icon": "$(edit)"
			},
			{
				"command": "file-tag-tree.deleteTags",
				"title": "Delete",
				"icon": "$(trash)"
			},
			{
				"command": "file-switch.quickSwitch",
				"title": "File Switch: Quick Switch"
			},
			{
				"command": "file-switch.relatedFiles",
				"title": "File Switch: Related Files"
			},
			{
				"command": "file-import.copyFilePath",
				"title": "File Import: Copy Path"
			},
			{
				"command": "file-import.pasteFilePath",
				"title": "File Import: Paste Path"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "file-tag-tree",
					"name": "File Tag"
				}
			]
		},
		"keybindings": [
			{
				"command": "file-switch.quickSwitch",
				"key": "ctrl+e",
				"mac": "cmd+e",
				"when": "editorTextFocus"
			},
			{
				"command": "file-switch.relatedFiles",
				"key": "ctrl+shift+e",
				"mac": "cmd+shift+e",
				"when": "editorTextFocus"
			},
			{
				"command": "file-import.copyFilePath",
				"key": "ctrl+shift+c",
				"mac": "cmd+shift+c",
				"when": "editorTextFocus"
			},
			{
				"command": "file-import.pasteFilePath",
				"key": "ctrl+shift+v",
				"mac": "cmd+shift+v",
				"when": "editorTextFocus && resourceExtname != .md"
			}
		],
		"configuration": {
			"title": "FileOps",
			"properties": {
				"fileOps.fileSwitch.quickSwitchPairs": {
					"type": [
						"array"
					],
					"markdownDescription": "Specify quick switch pairs. ex., \".js,.ts/.css,.scss\"",
					"description": "Specify quick switch pairs. ex., \".js,.ts/.css,.scss\"",
					"pattern": "(\\.[a-z]+)(,(\\.[a-z]+))*\\/(\\.[a-z]+)(,(\\.[a-z]+))*"
				},
				"fileOps.fileSwitch.excludeFiles": {
					"type": [
						"array"
					],
					"default": [
						"index.js"
					],
					"markdownDescription": "Files to skip in quick switch",
					"description": "Files to skip in quick switch"
				},
				"fileOps.fileImport.addQuotes": {
					"type": "boolean",
					"default": true,
					"description": "Add quotes for 'File Import: Paste Path'"
				},
				"fileOps.fileImport.addFileExtension": {
					"type": "boolean",
					"default": true,
					"description": "Add file extension for 'File Import: Paste Path'"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}